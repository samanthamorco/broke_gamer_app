					<div class="col-md-2 col-sm-2">
					  <!-- Logo -->
					  <div class="logo">
						 <h1><a href="/index.html">BrokeGamer</a></h1>
					  </div>
				   </div>
					<div class="col-md-6 col-sm-5">
