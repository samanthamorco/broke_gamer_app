						<div class="navi">
							<div id="ddtopmenubar" class="mattblackmenu">
								<ul>
									<li><a href="/" rel="ddsubmenu1">Home</a>
										<ul id="ddsubmenu1" class="ddsubmenustyle">
										</ul>
									</li>
									<li>

                  <% if current_user %>
                    <a href="#" rel="ddsubmenu1"><%= current_user.email %>'s Account</a>
                    <% else %>
                    <a href="#" rel="ddsubmenu1">Account</a>
                    <% end %>
										<ul id="ddsubmenu1" class="ddsubmenustyle">

 											<li><a href="/wishes">Wish List</a></li>
                          <% if current_user && current_user.id == (1 || 3) %>
                            <li><a href="/deals/pending">Pending Deals</a></li>
                            <% end %>

 										</ul>
									</li>

									<li><a href="/products?system=All" rel="ddsubmenu1">Games</a>
										<ul id="ddsubmenu1" class="ddsubmenustyle">
											<li><a href="/products?system=XboxOne">Xbox One</a></li>
											<li><a href="/products?system=PS4">PS4</a></li>
											<li><a href="/products?system=WiiU">Wii U</a></li>
											<li><a href="/products?system=3DS">Nintendo 3DS</a></li>
                      <li><a href="/products?system=PSVita">PS Vita</a></li>									
                      <li><a href="/deals">Deals</a></li>
										</ul>
									</li>                       
								</ul>
							</div>
						</div>
            <div class="pull-right">
             <%= form_tag "/products/search", method: :post do %>
             <%= text_field_tag :search %>
             <%= submit_tag "Search" %>
             <% end %>
           </div>
						<!-- Dropdown NavBar -->
						<div class="navis"></div>                   
					</div>

          <div class="col-md-4 col-sm-5">
          	<div class="kart-links">
              <% if current_user %>
							 <%= link_to "Sign Out", "/users/sign_out", method: :delete %>
               <% else %>
               <a href="/users/sign_in">Login</a> 
               <a href="/users/sign_up">Signup</a>
               <% end %>
					</div>
				</div>
			</div>
		</div>
